<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="BaseTheme.Settings" parent="AppTheme">
        <item name="android:statusBarColor">@color/md_theme_surface</item>
        <item name="android:navigationBarColor">@color/md_theme_background</item>
        <item name="toolbarStyle">@style/Widget.App.ToolbarSettings.Dark</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.Material3.DayNight">
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightStatusBar">?android:isLightTheme</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="elevationOverlayEnabled">true</item>
        <item name="elevationOverlayColor">@color/md_theme_primary</item>
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
        <item name="switchStyle">@style/Widget.App.Switch</item>
        <item name="sliderStyle">@style/Widget.App.Slider</item>
    </style>
</resources>
