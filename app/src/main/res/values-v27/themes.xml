<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="BaseTheme.Hamburger" parent="BaseTheme">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="BaseTheme.BottomNav" parent="BaseTheme">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/md_theme_inverseOnSurface</item>
    </style>

    <style name="BaseTheme.Settings" parent="BaseTheme">
        <item name="android:statusBarColor">@color/md_theme_background</item>
        <item name="android:navigationBarColor">@color/md_theme_background</item>
        <item name="alertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
    </style>

    <style name="BaseTheme" parent="AppTheme">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="BaseTheme.Plus" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/md_theme_background</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.Material3.DynamicColors.DayNight">
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="elevationOverlayEnabled">true</item>
        <item name="elevationOverlayColor">@color/md_theme_primary</item>
    </style>
</resources>
